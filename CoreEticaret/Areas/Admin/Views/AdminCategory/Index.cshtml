@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPanelLayout.cshtml";
}

<br />
<h2>Kategori Listesi</h2>



<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
           
             <div class="card-tools">
            <a class="btn btn-primary" href="/Admin/AdminCategory/AddCategory/">Yeni Kategori Ekle</a>
                      
          </div>

        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">  #</th>


                        <th style="width: 20%">Ad</th>


                        <th style="width: 30%">Açıklama</th>


                        <th>Parent ID</th>


                        <th style="width: 8%" class="text-center">Durum</th>


                        <th style="width: 20%" class="text-center">İşlemler</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>

                            <td>
                                <a>
                                    @item.Name
                                </a>
                                
                            </td>
                            <td>
                                @item.Description
                            </td>

                            <td class="project_progress">
                                @if (item.ParentCategory == null)
                                {
                                      <span class="badge badge-success">Ana Kategori</span>
                                }else{
                                     <span class="badge badge-success">Alt Kategori</span>
                                }
                            </td>
                            @if (item.Status == true)
                            {
                                <td class="project-state">
                                    <span class="badge badge-success">Aktif</span>
                                </td>
                            }
                            else
                            {
                                 <td class="project-state">
                                    <span class="badge badge-danger">Pasif</span>
                                </td>
                            }
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" href="/Admin/AdminCategory/EditCategory/@item.Id/">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Admin/AdminCategory/DeleteCategory/@item.Id/">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
  
