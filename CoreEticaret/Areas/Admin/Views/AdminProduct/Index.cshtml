@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPanelLayout.cshtml";
}

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">

            <div class="card-tools">
                <a class="btn btn-primary" href="/Admin/AdminProduct/AddProduct/">Yeni Ürün Ekle</a>

            </div>

        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Resim</th>
                        <th>Ürün Adı</th>
                        <th>Açıklama</th>
                        <th>Fiyat</th>
                        <th>Stok</th>

                        <th>Slider</th>
                        <th>Durum</th>
                        <th>Parent ID</th>
                        <th>Kategori</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                <img src="@item.Image" width=50 height=50>
                            </td>
                            <td>
                                    @item.Name
                            </td>
                            <td>
                                @item.Description
                            </td>


                            <td>@item.Price</td>
                            <td>@item.Stock</td>

                            @* <td>@item.Image1</td>*@
                            @* <td>@item.Image2</td>*@
                            @* <td>@item.Image3</td>*@
                            @if (item.Slider == true)
                            {
                                <td>
                                    <span class="badge badge-success">Aktif</span>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <span class="badge badge-danger">Pasif</span>
                                </td>
                            }


                            @if (item.Status == true)
                            {
                                <td class="project-state">
                                    <span class="badge badge-success">Aktif</span>
                                </td>
                            }
                            else
                            {
                                <td class="project-state">
                                    <span class="badge badge-danger">Pasif</span>
                                </td>
                            }
                            <td>@item.ParentId</td>
                            <td>@item.CategoryId</td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" href="/Admin/AdminProduct/EditProduct/@item.Id/">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Admin/AdminProduct/DeleteProduct/@item.Id/">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>

