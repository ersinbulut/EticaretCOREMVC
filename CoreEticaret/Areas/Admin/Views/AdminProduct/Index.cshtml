@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminPanelLayout.cshtml";
}

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">

            <div class="card-tools">
                <a class="btn btn-primary" href="#">Yeni Ürün Ekle</a>

            </div>

        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">  #</th>
                        <th style="width: 20%">Ürün Adı</th>
                        <th style="width: 30%">Açıklama</th>
                        <th>Marka</th>
                        <th>Model</th>
                        <th>Releasedon</th>
                        <th>Özellikleri</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Resimler</th>
                        <th>Slider</th>
                        <th>IsHome</th>
                        <th>IsApproved</th>
                        <th>IsFeatured</th>
                        <th style="width: 8%" class="text-center">Durum</th>
                        <th>Parent ID</th>
                        <th>Kategori</th>
                        <th style="width: 20%" class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>

                            <td>
                                <a>
                                    @item.Name
                                </a>

                            </td>
                            <td>
                                @item.Description
                            </td>

                            <td >
                                @item.Brand
                            </td>
                            <td>@item.Pattern</td>
                            <td>@item.Releasedon</td>
                            <td>@item.Features</td>
                            <td>@item.Price</td>
                            <td>@item.Stock</td>
                           @* <td>@item.Image</td>*@
                           @* <td>@item.Image1</td>*@
                           @* <td>@item.Image2</td>*@
                           @* <td>@item.Image3</td>*@
                             @if (item.Slider == true)
                            {
                                <td >
                                    <span class="badge badge-success">Aktif</span>
                                </td>
                            }
                            else
                            {
                                <td >
                                    <span class="badge badge-danger">Pasif</span>
                                </td>
                            }
                              @if (item.IsHome == true)
                            {
                                <td >
                                    <span class="badge badge-success">Aktif</span>
                                </td>
                            }
                            else
                            {
                                <td >
                                    <span class="badge badge-danger">Pasif</span>
                                </td>
                            }
                              @if (item.IsApproved == true)
                            {
                                <td class="project-state">
                                    <span class="badge badge-success">Aktif</span>
                                </td>
                            }
                            else
                            {
                                <td class="project-state">
                                    <span class="badge badge-danger">Pasif</span>
                                </td>
                            }
                              @if (item.IsFeatured == true)
                            {
                                <td class="project-state">
                                    <span class="badge badge-success">Aktif</span>
                                </td>
                            }
                            else
                            {
                                <td class="project-state">
                                    <span class="badge badge-danger">Pasif</span>
                                </td>
                            }
                            @if (item.Status == true)
                            {
                                <td class="project-state">
                                    <span class="badge badge-success">Aktif</span>
                                </td>
                            }
                            else
                            {
                                <td class="project-state">
                                    <span class="badge badge-danger">Pasif</span>
                                </td>
                            }
                            <td>@item.ParentId</td>
                            <td>kategori</td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" href="#">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm" href="#">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>

