@using EntityLayer.Concrete
@model List<Summary>
@{
    ViewData["Title"] = "ShopCart";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="./index.html"><i class="fa fa-home"></i> Anasayfa</a>
                    <span>Alışveriş Sepeti</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Shop Cart Section Begin -->
<section class="shop-cart spad">

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shop__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>Fiyat</th>
                                <th>Adet</th>
                                <th>Toplam</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                double toplam =0;
                            }
                            @foreach (var item in Model)
                            {
                                toplam += item.Price;
                                <tr>
                                    <td class="cart__product__item">
                                        <img src="img/shop-cart/cp-1.jpg" alt="">
                                        <div class="cart__product__item__title">
                                            <h6>@item.Name</h6>
                                            <div class="rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart__price">@item.Price ₺ </td>
                                    <td class="cart__quantity">
                                        <div class="pro-qty">
                                            <input type="text" value="1">
                                        </div>
                                    </td>
                                    <td class="cart__total">@item.Price ₺ </td>

                                    <td class="cart__close">
                                        <a href="/Cart/RemoveFromCart/@item.Id/">
                                            <span class="icon_close"></span>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="cart__btn">
                    <a href="/Product/Shop/">Alışverişe Devam Et</a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="cart__btn update__btn">
                    <a href="/Product/ShopCart/"><span class="icon_loading"></span> Sepeti Güncelle</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="discount__content">
                    <h6>İndirim Kodu</h6>
                    <form action="#">
                        <input type="text" placeholder="Kupon kodunu girin">
                        <button type="submit" class="site-btn">Uygula</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 offset-lg-2">
                <div class="cart__total__procced">
                    <h6>SEPET TOPLAM</h6>
                    <ul>
                        <li>Ara Toplam <span> @toplam ₺</span></li>
                        @{
                            toplam += 30;
                        }
                        <li>Toplam(KDV Dahil) <span>@toplam  ₺</span></li>
                    </ul>
                    <a href="#" class="primary-btn">Ödemeyi Tamamla</a>
                </div>
            </div>
        </div>
    </div>


</section>
<!-- Shop Cart Section End -->
