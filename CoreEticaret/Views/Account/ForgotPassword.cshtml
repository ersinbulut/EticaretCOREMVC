
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link href="~/login-form-06/login-form-06/fonts/icomoon/style.css" rel="stylesheet" />

    <link href="~/login-form-06/login-form-06/css/owl.carousel.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="~/login-form-06/login-form-06/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Style -->
    <link href="~/login-form-06/login-form-06/css/style.css" rel="stylesheet" />

    <title>ForgotPassword</title>
</head>
<body>
    <br />
    <br />
    <div class="container">
        <div class="row justify-content-center">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <div class="w-100 text-center mt-4 text">
                            <h3>Şifre Yenileme</h3>
                        </div>
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="text-danger">@ViewBag.ErrorMessage</div>
                        }

                        @if (Model?.EmailSent == true)
                        {
                            <div class="alert alert-success" role="alert">
                                <p>
                                    Bize kayt olduysanz, <br />
                                    Kayıtlı olan e-posta adresinize bir e-mail gönderdik.
                                </p>
                            </div>
                        }
                        else
                        {
                            <div class="w-100 text-center mt-4 text">
                                <p>Şifrenizi mi unuttunuz? Endişe etmeyiniz, kolayca sıfırlayabilirsiniz.</p>
                            </div>
                            <hr />
                            <p class="text-center">Şifre yenileme bağlantısını gönderebilmemiz için e-posta adresinize ihtiyacımız var.</p>
                            <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group first">
                                    <label for="username">E-Mail</label>
                                    <input type="text" name="Email" class="form-control" id="username" />
                                </div>
                                <input type="submit" value="Devam" class="btn btn-block btn-primary">
                            </form>
                            <br />
                            <div>
                                <p><a asp-action="Login" asp-controller="Account">Giriş Yap</a> sayfasna geri dön</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/login-form-06/login-form-06/js/jquery-3.3.1.min.js"></script>
    <script src="~/login-form-06/login-form-06/js/popper.min.js"></script>
    <script src="~/login-form-06/login-form-06/js/bootstrap.min.js"></script>
    <script src="~/login-form-06/login-form-06/js/main.js"></script>
</body>
</html>
